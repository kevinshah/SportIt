<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/try13"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreateNewEvent" >

    <Button
        android:id="@+id/backToMap"
        android:layout_width="45dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@+drawable/buttonselect2"
        android:onClick="changeView"
        android:textColor="#808080" />

    <TextView
        android:id="@+id/createActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/backToMap"
        android:gravity="center_vertical"
        android:paddingLeft="50dp"
        android:text="               "
        android:textColor="#808080"
        android:textSize="25dip" />

    <Spinner
        android:id="@+id/activitySpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backToMap"
        android:layout_marginTop="50dp"
        android:entries="@array/activityList"
        android:scrollbars="vertical"
        android:textSize="30dip" />

    <Spinner
        android:id="@+id/hourSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activitySpinner"
        android:layout_marginTop="50dp"
        android:entries="@array/hourList"
        android:scrollbars="vertical"
        android:textSize="30dip" />

    <Spinner
        android:id="@+id/minuteSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activitySpinner"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/hourSpinner"
        android:entries="@array/minuteList"
        android:scrollbars="vertical"
        android:textSize="30dip" />
    
    <Spinner
        android:id="@+id/amPM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activitySpinner"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/minuteSpinner"
        android:entries="@array/List"
        android:scrollbars="vertical"
        android:textSize="30dip" />

    <EditText
        android:id="@+id/numberPlayer"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_below="@+id/hourSpinner"
        android:layout_marginTop="31dp"
        android:gravity="center_vertical"
        android:hint="Number of Players"
        android:textColor="#000000" />
	<RadioGroup
	    	android:id="@+id/radios"
	       	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_below="@+id/numberPlayer"
    		android:orientation="horizontal">"
	    <RadioButton
	        android:id="@+id/radioNotify"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:checked="true"
	        android:text="Notify" />
	
	    <RadioButton
	        android:id="@+id/radioNotNotify"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/numberPlayer"
	        android:layout_toRightOf="@+id/radioNotify"
	        android:text="Not Notify" />
	</RadioGroup>

    <Button
        android:id="@+id/done"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radios"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="@drawable/custom_btn_beige"
        android:onClick="createView"
        android:text="Create"
        android:textColor="#ffffff"
        android:textSize="24dip" />
</RelativeLayout>

</ScrollView>